<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:views="clr-namespace:Podroze.Pages.Views"
             x:Class="Podroze.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary Source="/Resources/Styles/MainPage.xaml"></ResourceDictionary>
    </ContentPage.Resources>

    <NavigationPage.TitleView>
        <views:HeaderBar></views:HeaderBar>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <VerticalStackLayout>
            <ScrollView>
                <VerticalStackLayout x:Name="ContentWrapper"
                                     Padding="30,0"
                                     Spacing="25">

                </VerticalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </ContentPage.Content>



</ContentPage>
